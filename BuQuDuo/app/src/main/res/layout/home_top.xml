<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="350dp">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="165dp"
        android:scaleType="fitXY"
        android:src="@mipmap/beijing1" />

    <ImageView
        android:id="@+id/imageView_circle"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"
        android:layout_width="230dp"
        android:layout_height="230dp"
        android:scaleType="fitXY"
        android:src="@mipmap/runcircle" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignTop="@+id/imageView_circle"
        android:layout_marginTop="40dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView_runcount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:layout_weight="1"
                android:textAlignment="viewEnd"
                android:layout_gravity="end|bottom"
                android:text="0" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:text="步" />
        </LinearLayout>


        <TextView
            android:id="@+id/textView_runinfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_gravity="center"
            android:textColor="@color/color999999"
            android:text="运动越多，奖励越多" />
    </LinearLayout>

    <Button
        android:id="@+id/button_getrun"
        android:layout_width="120dp"
        android:layout_height="36dp"
        android:textColor="#ffffff"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/imageView_circle"
        android:background="@mipmap/cangebtn" />



</RelativeLayout>