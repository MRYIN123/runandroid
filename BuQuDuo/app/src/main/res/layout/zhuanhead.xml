<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:background="#f5f5f9">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:src="@mipmap/signbac"
        android:scaleType="fitXY"/>

    <TextView
        android:id="@+id/signtop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="我的金币"
        android:textSize="14sp"
        android:textColor="@color/colorffffff"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="30dp">
    </TextView>

    <TextView
        android:id="@+id/sign_mygoldtxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/colorffffff"
        android:layout_alignLeft="@+id/signtop"
        android:layout_alignBottom="@+id/signtop"
        android:layout_marginTop="10dp">
    </TextView>

    <ImageView
        android:id="@+id/signsrcimg"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@+id/sign_mygoldtxt"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:src="@mipmap/signscrbac"/>

    <RelativeLayout
        android:layout_alignTop="@+id/signsrcimg"
        android:layout_alignLeft="@+id/signsrcimg"
        android:layout_alignRight="@+id/signsrcimg"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/colorffffff">

        <TextView
            android:id="@+id/signwarmTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp">
        </TextView>

        <TextView
            android:id="@+id/signInfoTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#666666"
            android:textSize="14sp"
            android:layout_alignLeft="@+id/signwarmTxt"
            android:layout_below="@+id/signwarmTxt"
            android:layout_marginTop="10dp">
        </TextView>

        <Button
            android:id="@+id/signBtn"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:textSize="16dp"
            android:text="签到"
            android:background="@color/color0000ff">
        </Button>

    </RelativeLayout>

</RelativeLayout>