<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_height="66dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_toLeftOf="@+id/run1"
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.0"
                android:layout_gravity="center_horizontal"
                android:textColor="#333333"
                android:textSize="17sp" />

            <View
                android:id="@+id/run1"
                android:layout_width="1dp"
                android:layout_height="2dp"
                android:layout_centerInParent="true">
            </View>

            <TextView
                android:layout_toRightOf="@+id/run1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="公里"
                android:layout_alignBottom="@+id/textView3"
                android:textColor="#333333"
                android:textSize="14sp"/>
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="步行里程"
            android:textAlignment="center"
            android:textColor="#999999"
            android:textSize="14sp"/>
    </LinearLayout>

<!--    步行时间-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_toLeftOf="@+id/runhour"
                android:id="@+id/textView_runhour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.0"
                android:textColor="#333333"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/runhour"
                android:layout_toLeftOf="@+id/runmid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="小时"
                android:textColor="#333333"
                android:layout_alignBottom="@+id/textView_runhour"
                android:textSize="14sp"/>

            <View
                android:id="@+id/runmid"
                android:layout_width="1dp"
                android:layout_height="2dp"
                android:layout_centerInParent="true"></View>

            <TextView
                android:layout_toRightOf="@+id/runmid"
                android:id="@+id/textView_runmin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.0"
                android:textColor="#333333"
                android:textSize="17sp" />

            <TextView
                android:layout_toRightOf="@+id/textView_runmin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="分钟"
                android:layout_alignBottom="@+id/textView_runmin"
                android:textColor="#333333"
                android:textSize="14sp"/>
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="步行时间"
            android:textAlignment="center"
            android:textColor="#999999"
            android:textSize="14sp"/>
    </LinearLayout>

<!--卡路里-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_toLeftOf="@+id/run2"
                android:id="@+id/textView_caluli"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.0"
                android:textColor="#333333"
                android:textSize="17sp" />

            <View
                android:id="@+id/run2"
                android:layout_width="1dp"
                android:layout_height="2dp"
                android:layout_centerInParent="true"
                ></View>

            <TextView
                android:layout_toRightOf="@+id/run2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="千卡"
                android:layout_alignBottom="@+id/textView_caluli"
                android:textColor="#333333"
                android:textSize="14sp"/>
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="卡路里"
            android:textAlignment="center"
            android:textColor="#999999"
            android:textSize="14sp"/>
    </LinearLayout>



</LinearLayout>